        stage('Zero Downtime Deployment') {
            steps {
                sh'''
                    echo "\n****** Blue Health Check & Build ******"

                    # 8081 í¬íŠ¸ê°€ ì‚´ì•„ìˆë‹¤ë©´ -> 8082 í¬íŠ¸ ê·¸ë¦°ì— ë°°í¬
                    # 8081 í¬íŠ¸ê°€ ì£½ì–´ìˆë‹¤ë©´ -> 8081 í¬íŠ¸ ë¸”ë£¨ì— ë°°í¬
                    if curl -s "http://3.34.135.50:8081" > /dev/null
                    then
                        deployment_target_port=8082
                        deployment_target=green
                        opposite_target=blue
                    else
                        deployment_target_port=8081
                        deployment_target=blue
                        opposite_target=green
                    fi

                    # ê¸°ì¡´ ì´ë¯¸ì§€ê°€ ì¡´ì¬í•˜ë©´ ì‚­ì œ
                    echo delete existing Docker image
                    if docker image inspect server_${opposite_target} >/dev/null 2>&1; then
                        docker rmi server_${opposite_target}
                        echo "${opposite_target}-image exists locally & removed"
                    else
                        echo "${opposite_target}-image does not exist locally"
                    fi

                    # ë°± ë¹Œë“œë¥¼ í•´ì„œ íƒ€ê²Ÿí¬íŠ¸(í˜¸ìŠ¤íŠ¸) 8081(ì»¨í…Œì´ë„ˆë‚´ë¶€) ì´ë¯¸ì§€ë¡œ ë§Œë“¤ì–´ì„œ
                    # ë¸”ë£¨ ê·¸ë¦° ì´ë¦„ì„ ë¶™ì—¬ì„œ ë„ì»¤ run
                    echo [BE] Green Build Docker Image
                    docker build -t server_${deployment_target} ./backend
                    echo [BE] Green Run Docker Container
                    docker run -dp ${deployment_target_port}:8081 --name haruman_server_${deployment_target} server_${deployment_target}
 

                    echo "\n****** Continuous Green Health Check ******"

                    # 10ì´ˆë§ˆë‹¤ í—¬ìŠ¤ ì²´í¬ 10ë²ˆ -> ì‹¤íŒ¨í•˜ë©´ ê·¸ë¦° ë°°í¬ ë©ˆì¶¤
                    # ì£¼ë¡œ 2ë²ˆ ì •ë„ ëŒì•„ê°€ë©´ ì„±ê³µí•¨
                    for retry_count in \$(seq 10)
                    do
                      if curl -s "http://3.34.135.50:${deployment_target_port}" > /dev/null
                      then
                          echo "Health check success âœ…"
                          break
                      fi

                      if [ $retry_count -eq 10 ]
                      then
                        echo "Health check failed âŒ"
                        exit 1
                      fi

                      echo "The server is not alive yet. Retry health check in 10 seconds..."
                      sleep 10
                    done


                    echo "\n****** Nginx Proxy Redirect ******"

                    # nginx ì»¨í…Œì´ë„ˆ ì ‘ì†
                    ssh -i J9A607T.pem ubuntu@j9a607.p.ssafy.io /bin/bash

                    # ë¸”ë£¨ 8081 -> ê·¸ë¦° 8082ë¡œ ë°”ê¿ˆ
                    # ê·¸ë¦° 8082 -> ë¸”ë£¨ 8081ë¡œ ë°”ê¿ˆ
                    if [ "${deployment_target}" == green ]
                    then
                        docker exec haruman_nginx_1 bash -c "echo 'set \$service_url 3.34.135.50:8082;' > /etc/nginx/conf.d/service-url.inc ; service nginx reload"
                        echo "Switch the reverse proxy direction of nginx to ${deployment_target} http://3.34.135.50:${deployment_target_port} ğŸŸ¢ğŸŸ©"
                    else
                        docker exec haruman_nginx_1 bash -c "echo 'set \$service_url 3.34.135.50:8081;' > /etc/nginx/conf.d/service-url.inc ; service nginx reload"
                        echo "Switch the reverse proxy direction of nginx to ${deployment_target} http://3.34.135.50:${deployment_target_port} ğŸ”µğŸŸ¦"
                    fi


                    echo "\n****** Kill the process on the opposite server ******""
                    # ê¸°ì¡´ ì»¨í…Œì´ë„ˆê°€ ì¡´ì¬í•˜ë©´ ë‚´ë¦¼
                    if docker container inspect haruman_server_${opposite_target} >/dev/null 2>&1; then
                        echo "${opposite_target}-container exists locally & removed"
                        docker stop haruman_server_${opposite_target}
                        docker rm haruman_server_${othopposite_targeter_target}
                    else
                        echo "${opposite_target}-container does not exist locally"
                    fi

                '''
            }
        }

